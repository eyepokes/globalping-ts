{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["es2020", "dom"],
        "types": ["@types/node", "@types/mocha"],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "removeComments": false,
        "preserveConstEnums": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules", "./test/**/*.ts", "./test-system/**/*.ts"]
}
